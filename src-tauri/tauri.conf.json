{
    "productName": "Next AI Draw.io",
    "version": "0.4.0",
    "identifier": "jp.jiang.next-ai-draw-io",
    "build": {
        "beforeBuildCommand": "node scripts/build-desktop-prepare.js",
        "beforeDevCommand": "npm run dev",
        "devUrl": "http://localhost:6002"
    },
    "app": {
        "windows": [
            {
                "title": "Next AI Draw.io",
                "width": 1200,
                "height": 800,
                "resizable": true,
                "fullscreen": false,
                "url": "http://localhost:6001"
            }
        ],
        "security": {
            "csp": null
        },
        "withGlobalTauri": true
    },
    "bundle": {
        "active": true,
        "targets": ["nsis"],
        "icon": [
            "../icons_new/32x32.png",
            "../icons_new/128x128.png",
            "../icons_new/128x128@2x.png",
            "../icons_new/icon.icns",
            "../icons_new/icon.ico"
        ],
        "resources": {
            "../out": "./"
        }
    },
    "plugins": {
        "updater": {
            "active": true,
            "endpoints": [
                "https://github.com/DayuanJiang/next-ai-draw-io/releases/latest/download/latest.json"
            ],
            "dialog": true,
            "pubkey": ""
        }
    }
}
