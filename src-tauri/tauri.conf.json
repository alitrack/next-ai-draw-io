{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "next-ai-draw-io-desktop",
  "version": "0.1.0",
  "identifier": "com.nextai.drawio",
  "build": {
    "frontendDist": "../out",
    "devUrl": "http://localhost:6002",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "node scripts/tauri-static-build.js"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "Next AI Draw.io Desktop",
        "width": 1400,
        "height": 900,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
